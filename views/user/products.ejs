<script>
   document.getElementById('category-filter').addEventListener('change', function() {
    const selectedValue = this.value;
    const currentPage = new URLSearchParams(window.location.search).get('page') || 1; // Get current page or default to 1
    // Redirect to the sorted products page
    window.location.href = `/shop?sort=${selectedValue}&page=${currentPage}`;
});
document.querySelectorAll('.wishlist-icon').forEach((button) => {
    button.addEventListener('click', function(event) {
        event.preventDefault();
        const productId = this.getAttribute('href').split('/').pop();
        const isInWishlist = this.querySelector('i').classList.contains('text-danger');

        // Set route based on current wishlist status
        const url = isInWishlist ? `/removeFromWishlist/${productId}` : `/wishlist/add/${productId}`;
        
        fetch(url, { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Toggle the icon color based on the action taken
                    this.querySelector('i').classList.toggle('text-danger', !isInWishlist);
                    showNotification(isInWishlist ? 'Removed from Wishlist!' : 'Added to Wishlist!', isInWishlist);
                    
                    // Optional: Reload page after 1.5 seconds
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showNotification(data.message || 'Action failed.', true);
                }
            })
            .catch(error => {
                showNotification('An error occurred. Please try again.', true);
                console.error('Error:', error);
            });
    });
});

// Show a small notification (similar to the previous function)
function showNotification(message, isError = false) {
    const notification = document.createElement('div');
    notification.className = 'notification';
    notification.style.backgroundColor = isError ? '#e74c3c' : '#2ecc71';
    notification.innerText = message;
    document.body.appendChild(notification);

    // Show notification
    setTimeout(() => notification.classList.add('show'), 10);

    // Hide after 1.5 seconds and remove from DOM
    setTimeout(() => {
        notification.classList.remove('show');
        setTimeout(() => notification.remove(), 500);
    }, 1500);
}

     
    async function addToCart(form) {
            const formData = new FormData(form);
          const currentUrl = new URL(window.location.href);

            const response = await fetch(form.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest', // Indicate AJAX request
                }
            });
    
            const data = await response.json(); // Parse JSON response
    
            if (data.success) {
                // Use SweetAlert2 to show success message
                Swal.fire({
                    title: "Successful!",
                    text: data.message,
                    icon: "success",
                    confirmButtonText: "OK",
                }).then(() => {

                    // Optional: Redirect to wishlist after acknowledgment
                    window.location.href = `${currentUrl}`; 
                });
            } else {
                // Use SweetAlert2 to show error message
                Swal.fire({
                    title: "Error!",
                    text: data.message,
                    icon: "error",
                    confirmButtonText: "Try Again",
                });
            }
        }
   
</script>

