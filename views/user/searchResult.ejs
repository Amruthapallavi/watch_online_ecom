<section id="top-watches" class="new-arrivals">
    <div class="container mt-3">
        <div class="section-header">
            <h2>Search Result</h2>
        </div><!--/.section-header-->

        <div class="new-arrivals-content">
            <div class="row">
                <% data.forEach(product => { %>
                <div class="col-md-3 col-sm-4">
                    <div class="single-new-arrival">
                        <div class="single-new-arrival-bg">
                            <div id="carousel<%= product._id %>" class="carousel slide" data-bs-ride="false">
                                <div class="carousel-inner">
                                    <% product.image.forEach(function(image, index) { %>
                                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                        <img src="/<%= image %>" class="d-block w-100" alt="<%= product.pname %>">
                                    </div>
                                    <% }); %>
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= product._id %>" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= product._id %>" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                            <div class="new-arrival-cart d-flex justify-content-between align-items-center">
                                <% if (product.quantity < 1) { %>
                                    <span class="out-of-stock">Out of Stock</span>
                                <% } else { %>
                                    <form action="/add-to-cart/<%= product._id %>" method="POST" onclick="addToCart(this); return false;">
                                        <a class="lnr lnr-cart" style="text-decoration: none; color: white;" href="">Add to Cart</a>
                                    </form>
                                    <a href="/wishlist/add/<%= product._id %>" class="wishlist-icon" onclick="addToWishlist(event, '<%= product.pname %>')">
                                        <i class="fas fa-heart <%= wishlistProductIds.includes(product._id.toString()) ? 'text-danger' : '' %>" title="Add to Wishlist"></i>
                                    </a>
                                <% } %>
                            </div>
                        </div>
                        <h4><a href="/product/<%= product._id %>"><%= product.pname %></a></h4>
                        <p class="card-text">
                            <% if (product.offerPrice < product.price) { %>
                                <span style="text-decoration: line-through; color: #888;"> ‚Çπ <%= product.price %></span> 
                                <strong style="color: #000;"> ‚Çπ <%= product.offerPrice %></strong>
                                <span class="badge bg-success ms-2">Offer: <%= product.productOffer ? product.productOffer : categoryMap[product.category._id] %>%</span>
                            <% } else { %>
                                <strong style="color: #000;"> ‚Çπ <%= product.price %></strong>
                            <% } %>
                        </p>
                    </div>
                </div>
                <% }) %>
            </div>
        </div><!--/.new-arrivals-content-->
        
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="/search?page=<%= currentPage - 1 %>&sort=<%= sortOption %>">&laquo;</a>
            <% } %>
        
            <% for (let i = 1; i <= totalPages; i++) { %>
                <a href="/search?page=<%= i %>&sort=<%= sortOption %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
            <% } %>
        
            <% if (currentPage < totalPages) { %>
                <a href="/search?page=<%= currentPage + 1 %>&sort=<%= sortOption %>">&raquo;</a>
            <% } %>
        </div>
        
    
