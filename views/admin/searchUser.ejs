<%- include('../include/adminHeader.ejs') %>
<style>
    .container-button {
      text-align: center;
  }
  
    .center-button {
      display: inline-block; /* Ensure the button behaves as an inline element */
      margin: 0 auto; /* Center block-level elements */
  }
  
  </style>

<section>


<div class="container mt-4">

    <form class="d-flex" action="/search-user" method="post">
        <input class="form-control me-2" type="search" name="String" placeholder="Search user using Email" aria-label="Search">
        <button class="btn btn-outline-dark searchButton" type="submit">Search</button>
      </form><br>
    <h2 style="text-align: center; text-decoration: underline;">Search Result</h2>
    <table class="table mt-5" id="peopleTable">
        <thead>
          <tr>
            <th scope="col">User_Name</th>
            <th scope="col">Email</th>
            <th scope="col">phone</th>
                  <th scope="col">Actions</th>
      
          </tr>
        </thead>
        <tbody>
          <% data.forEach(user => { %>

    <tr>

        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
         <td>
       
           <a href="/edit-user/<%= user._id %>" class="btn btn-primary">Edit</a>
           <form class="d-inline" id="deleteButton" action="/delete-user/<%= user._id %>" method="POST">
           <button class="btn btn-danger deleteProduct" type="submit" >Delete</button>      
           </form>
           </td>
    </tr>

<% }) %>
   
</tbody>
</table>
<div class="container-button">
 <button class="center-button"><a href="/users">Back to Users </a></button>
   </div> </div>
</section>

<%- include('../include/adminFooter.ejs') %>
