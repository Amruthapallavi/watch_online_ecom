.container {
    padding: 30px;
    width: 80%;
    max-width: 70%;
    box-sizing: border-box;
}
h2 {
    color: #333;
    text-align: center;
}

.form-group {
    margin-bottom: 20px;
}

label {
    display: block;
    margin-bottom: 5px;
    color: #555;
}

input[type="text"],
input[type="number"],
input[type="file"],
textarea {
    width: calc(100% - 20px); /* Adjust for padding */
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
}

textarea {
    resize: vertical;
    min-height: 100px;
    max-height: 200px; /* Limit height for better appearance */
}

input[type="submit"] {
    background-color: #060606;
    color: white;
    
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
    box-sizing: border-box;
}

input[type="submit"]:hover {
    background-color: #6f716f;
}

