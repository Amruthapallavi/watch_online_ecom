<%- include('../include/adminHeader.ejs') %>
<style>
    .container-button {
      text-align: center;
  }
  
    .center-button {
      display: inline-block; /* Ensure the button behaves as an inline element */
      margin: 0 auto; /* Center block-level elements */
  }
  
  </style>

<section>


<div class="container mt-4">

    <form class="d-flex" action="/search-product" method="post">
        <input class="form-control me-2" type="search" name="String" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-dark searchButton" type="submit">Search</button>
      </form><br>
    <h2 style="text-align: center; text-decoration: underline;">Search Result</h2>
    <table class="table mt-5" id="peopleTable">
        <thead>
          <tr>
            <th scope="col">Image</th>
            <th scope="col">Product_name</th>
            <th scope="col">Category</th>
            <th scope="col">Quantity</th>
      
            <th scope="col">Price</th>
            <th scope="col">Actions</th>
      
          </tr>
        </thead>
        <tbody>
          <% data.forEach(product => { %>

    <tr>

        <td><img src="/<%= product.image[0] %>" width="=60px" height="60px" alt="<%= product.image %>"></td>
        <td><%= product.pname %></td>
        <td><%= product.category %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
         <td>
       
           <a href="/edit-product/<%= product._id %>" class="btn btn-primary">Edit</a>
           <form class="d-inline" id="deleteButton" action="/delete-product/<%= product._id %>" method="POST">
           <button class="btn btn-danger deleteProduct" type="submit" >Delete</button>      
           </form>
           </td>
    </tr>

<% }) %>
   
</tbody>
</table>
<div class="container-button">
 <button class="center-button"><a href="/products">Back to Products </a></button>
   </div> </div>
</section>

<%- include('../include/adminFooter.ejs') %>
