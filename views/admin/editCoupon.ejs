<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Coupon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container mt-5">
        <h2>Edit Coupon</h2>
        <form action="/editCoupon/<%= coupon._id %>" method="POST">
            <div class="mb-3">
                <label for="code" class="form-label">Coupon Code</label>
                <input type="text" class="form-control" id="code" name="code" value="<%= coupon.code %>" required>
            </div>

            <div class="mb-3">
                <label for="value" class="form-label">Value (%)</label>
                <input type="number" class="form-control" id="value" name="value" value="<%= coupon.value %>" required>
            </div>

            <div class="mb-3">
                <label for="expiresAt" class="form-label">Expires At</label>
                <input type="date" class="form-control" id="expiresAt" name="expiresAt" value="<%= coupon.expiresAt.toISOString().substring(0, 10) %>" required>
            </div>
            <div class="mb-3"></div>
                <label for="value" class="form-label">Min_Purchase</label>
                <input type="number" class="form-control" id="value" name="min_purchase" value="<%= coupon.min_purchase %>" required>
            </div>
            <!-- <div class="mb-3">
                <label for="category" class="form-label">Eligible Category</label>
                <select class="form-control" id="category" name="category">
                    < categories.forEach(cat => { %>
                      <option value="<= cat._id %>"><= cat.cname %> (<= cat._id %>)</option>
                    < }) %>
                  </select>
                  
            </div> -->

            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/coupons" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
